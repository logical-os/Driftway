{
  "name": "driftway",
  "version": "1.0.0",
  "description": "A TypeScript Node.js backend for a messaging service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "start-all": "node start.js",
    "client": "cd client && node server.js"
  },
  "keywords": [
    "messaging",
    "typescript",
    "nodejs",
    "socket.io",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.8",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.2",
    "rimraf": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
